<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dutch Thrift - <%= mode === 'register' ? 'Registreren' : 'Inloggen' %></title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      line-height: 1.6;
      color: #333;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
      display: flex;
      min-height: 100vh;
    }
    
    .login-container {
      display: flex;
      width: 100%;
    }
    
    .login-form-container {
      flex: 1;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      max-width: 500px;
      margin: 0 auto;
    }
    
    .hero-container {
      flex: 1;
      background-color: #3498db;
      color: white;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background-image: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
      display: none; /* Hidden on mobile */
    }
    
    @media (min-width: 768px) {
      .hero-container {
        display: flex;
      }
    }
    
    .form-card {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }
    
    .logo {
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .logo h1 {
      font-size: 2rem;
      color: #3498db;
      margin: 0;
    }
    
    .logo p {
      color: #888;
      margin: 0;
    }
    
    .tabs {
      display: flex;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid #eee;
    }
    
    .tab {
      flex: 1;
      text-align: center;
      padding: 0.75rem;
      cursor: pointer;
      font-weight: 500;
      color: #888;
      transition: all 0.3s ease;
    }
    
    .tab.active {
      color: #3498db;
      border-bottom: 2px solid #3498db;
    }
    
    .form-group {
      margin-bottom: 1.25rem;
    }
    
    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #555;
    }
    
    input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
      transition: border 0.3s ease;
    }
    
    input:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
    }
    
    button {
      width: 100%;
      padding: 0.85rem;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    
    button:hover {
      background-color: #2980b9;
    }
    
    .form-footer {
      margin-top: 1.5rem;
      text-align: center;
      font-size: 0.9rem;
      color: #888;
    }
    
    .form-footer a {
      color: #3498db;
      text-decoration: none;
    }
    
    .form-footer a:hover {
      text-decoration: underline;
    }
    
    .error-message {
      background-color: #ffebee;
      color: #d32f2f;
      padding: 0.75rem;
      border-radius: 4px;
      margin-bottom: 1.25rem;
      display: none;
    }
    
    .hero-content {
      max-width: 500px;
      position: relative;
      z-index: 1;
    }
    
    .hero-content h2 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
    }
    
    .hero-content p {
      font-size: 1.1rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }
    
    .hero-content ul {
      list-style-type: none;
      padding: 0;
      margin: 0 0 2rem 0;
    }
    
    .hero-content li {
      padding: 0.5rem 0;
      display: flex;
      align-items: center;
    }
    
    .hero-content li::before {
      content: "✓";
      margin-right: 0.5rem;
      color: white;
      font-weight: bold;
    }
    
    .form-content {
      display: none;
    }
    
    .form-content.active {
      display: block;
    }
    
    .test-account {
      background-color: #f9f9f9;
      border-left: 3px solid #3498db;
      padding: 0.75rem;
      margin-top: 1rem;
      font-size: 0.9rem;
    }

    .action-button {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #fff;
      color: #3498db;
      text-decoration: none;
      border-radius: 4px;
      border: 1px solid #3498db;
      font-weight: 500;
      transition: all 0.2s ease;
      text-align: center;
      margin-top: 1rem;
    }
    
    .action-button:hover {
      background-color: #3498db;
      color: #fff;
    }

    .back-to-home {
      display: block;
      text-align: center;
      margin-top: 1rem;
      color: #888;
      text-decoration: none;
    }

    .back-to-home:hover {
      color: #3498db;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-form-container">
      <div class="form-card">
        <div class="logo">
          <h1>Dutch Thrift</h1>
          <p>Premium Consignment Platform</p>
        </div>
        
        <div class="tabs">
          <div class="tab <%= mode !== 'register' ? 'active' : '' %>" id="login-tab">Inloggen</div>
          <div class="tab <%= mode === 'register' ? 'active' : '' %>" id="register-tab">Registreren</div>
        </div>
        
        <% if (error) { %>
        <div class="error-message" style="display: block;">
          <%= error %>
        </div>
        <% } %>
        
        <div class="form-content <%= mode !== 'register' ? 'active' : '' %>" id="login-form">
          <form id="login-form-element">
            <div class="form-group">
              <label for="login-email">Email</label>
              <input type="email" id="login-email" name="email" placeholder="jouw@email.com" required>
            </div>
            
            <div class="form-group">
              <label for="login-password">Wachtwoord</label>
              <input type="password" id="login-password" name="password" placeholder="••••••••" required>
            </div>
            
            <button type="submit">Inloggen</button>
            
            <div class="social-login">
              <p style="text-align: center; margin: 15px 0; color: #888;">of ga verder met</p>
              <div style="display: flex; gap: 10px;">
                <a href="/auth/github" style="flex: 1; text-align: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px; text-decoration: none; color: #333;">
                  <span style="font-weight: 500;">GitHub</span>
                </a>
                <a href="/auth/google" style="flex: 1; text-align: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px; text-decoration: none; color: #333;">
                  <span style="font-weight: 500;">Google</span>
                </a>
              </div>
            </div>
            
            <div class="test-account">
              <strong>Test Account:</strong> consignor@test.com / consignorpass123
            </div>
            
            <div class="form-footer">
              Nog geen account? <a href="/login?mode=register">Registreer hier</a>
            </div>
          </form>

          <a href="/" class="back-to-home">Terug naar de homepagina</a>
        </div>
        
        <div class="form-content <%= mode === 'register' ? 'active' : '' %>" id="register-form">
          <form id="register-form-element">
            <div class="form-group">
              <label for="register-name">Naam</label>
              <input type="text" id="register-name" name="name" placeholder="Volledige naam" required>
            </div>
            
            <div class="form-group">
              <label for="register-email">Email</label>
              <input type="email" id="register-email" name="email" placeholder="jouw@email.com" required>
            </div>
            
            <div class="form-group">
              <label for="register-password">Wachtwoord</label>
              <input type="password" id="register-password" name="password" placeholder="••••••••" required>
            </div>
            
            <div class="form-group">
              <label for="register-password-confirm">Bevestig wachtwoord</label>
              <input type="password" id="register-password-confirm" name="passwordConfirm" placeholder="••••••••" required>
            </div>
            
            <button type="submit">Registreren</button>
            
            <div class="social-login">
              <p style="text-align: center; margin: 15px 0; color: #888;">of registreer met</p>
              <div style="display: flex; gap: 10px;">
                <a href="/auth/github" style="flex: 1; text-align: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px; text-decoration: none; color: #333;">
                  <span style="font-weight: 500;">GitHub</span>
                </a>
                <a href="/auth/google" style="flex: 1; text-align: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px; text-decoration: none; color: #333;">
                  <span style="font-weight: 500;">Google</span>
                </a>
              </div>
            </div>
            
            <div class="form-footer">
              Heb je al een account? <a href="/login">Log hier in</a>
            </div>
          </form>

          <a href="/" class="back-to-home">Terug naar de homepagina</a>
        </div>
      </div>
    </div>
    
    <div class="hero-container">
      <div class="hero-content">
        <h2>Jouw betrouwbare partner in consignatie</h2>
        <p>Dutch Thrift biedt een premium platform voor het beheren van je consignatie met gemak en efficiëntie.</p>
        
        <ul>
          <li>Intelligente item-analyse met AI-technologie</li>
          <li>Realtime marktprijsschattingen</li>
          <li>Uitgebreid voorraadbeheer</li>
          <li>Veilige betalingsverwerking</li>
          <li>Naadloze integratie met verzendproviders</li>
        </ul>
      </div>
    </div>
  </div>
  
  <script>
    // Tab switching functionality
    const loginTab = document.getElementById('login-tab');
    const registerTab = document.getElementById('register-tab');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');
    const loginFormElement = document.getElementById('login-form-element');
    const registerFormElement = document.getElementById('register-form-element');
    const errorMessage = document.querySelector('.error-message');

    // Handle login form submission
    loginFormElement.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = document.getElementById('login-email').value;
      const password = document.getElementById('login-password').value;
      
      try {
        const response = await fetch('/api/auth/consignor/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ email, password })
        });
        
        const data = await response.json();
        
        if (data.success) {
          // Redirect to dashboard
          window.location.href = '/consignor/dashboard';
        } else {
          // Show error message
          if (errorMessage) {
            errorMessage.textContent = data.message || 'Login mislukt. Controleer je gegevens.';
            errorMessage.style.display = 'block';
          }
        }
      } catch (error) {
        console.error('Login error:', error);
        if (errorMessage) {
          errorMessage.textContent = 'Er is een fout opgetreden bij het inloggen. Probeer het later opnieuw.';
          errorMessage.style.display = 'block';
        }
      }
    });
    
    // Handle registration form submission
    registerFormElement.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const name = document.getElementById('register-name').value;
      const email = document.getElementById('register-email').value;
      const password = document.getElementById('register-password').value;
      const passwordConfirm = document.getElementById('register-password-confirm').value;
      
      // Basic validation
      if (password !== passwordConfirm) {
        if (errorMessage) {
          errorMessage.textContent = 'Wachtwoorden komen niet overeen';
          errorMessage.style.display = 'block';
        }
        return;
      }
      
      try {
        const response = await fetch('/api/auth/consignor/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ name, email, password })
        });
        
        const data = await response.json();
        
        if (data.success) {
          // After successful registration, login the user
          const loginResponse = await fetch('/api/auth/consignor/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ email, password })
          });
          
          const loginData = await loginResponse.json();
          
          if (loginData.success) {
            // Redirect to dashboard
            window.location.href = '/consignor/dashboard';
          } else {
            // Show success message and redirect to login tab
            if (errorMessage) {
              errorMessage.textContent = 'Registratie succesvol! Je kunt nu inloggen.';
              errorMessage.style.display = 'block';
            }
            loginTab.click();
          }
        } else {
          // Show error message
          if (errorMessage) {
            errorMessage.textContent = data.message || 'Registratie mislukt. Probeer het opnieuw.';
            errorMessage.style.display = 'block';
          }
        }
      } catch (error) {
        console.error('Registration error:', error);
        if (errorMessage) {
          errorMessage.textContent = 'Er is een fout opgetreden bij het registreren. Probeer het later opnieuw.';
          errorMessage.style.display = 'block';
        }
      }
    });
    
    loginTab.addEventListener('click', () => {
      loginTab.classList.add('active');
      registerTab.classList.remove('active');
      loginForm.classList.add('active');
      registerForm.classList.remove('active');
      window.history.replaceState({}, document.title, '/login');
    });
    
    registerTab.addEventListener('click', () => {
      registerTab.classList.add('active');
      loginTab.classList.remove('active');
      registerForm.classList.add('active');
      loginForm.classList.remove('active');
      window.history.replaceState({}, document.title, '/login?mode=register');
    });
  </script>
</body>
</html>